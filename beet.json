{
    "name": "Realms Beyond",
    "description": "Adventure RPG Datapack - Converted to Bolt",
    "author": "Smitteeh",
    "version": "2.0.0",
    "require": [
        "bolt"
    ],
    "data_pack": {
        "load": ["src"],
        "name": "Realms Beyond"
    },
    "resource_pack": {
        "load": ["src"]
    },
    "pipeline": ["mecha"],
    "output": "build",
    "meta": {
        "bolt": {
            "entrypoint": ["bolt:main", "rb:load", "rb:tick"]
        },
        "mecha": {
            "formatting": {
                "indentation": "  "
            }
        }
    }
}
